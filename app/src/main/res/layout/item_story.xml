
<com.google.android.material.card.MaterialCardView android:id="@+id/item_story"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Media -->
        <TextView
            android:id="@+id/tv_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textSize="20sp"
            tools:text="Arya Putra"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:textColor="?android:attr/textColorSecondary"
            />

        <ImageView
            android:id="@+id/iv_stories"
            android:layout_width="match_parent"
            android:layout_height="194dp"
            app:srcCompat="@drawable/icon_person"
            android:scaleType="centerCrop"
            android:contentDescription="@string/photo_story"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Title, secondary and supporting text -->
            <TextView
                android:id="@+id/tv_item_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="5"
                android:textSize="16sp"
                tools:text="Perkenalkan nama saya adalah Muhammad Dani Arya Putra"
                />
        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>